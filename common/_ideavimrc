" turn off bell sound completely
set visualbell
set noerrorbells

" enable highlighting when searching
set hlsearch

" show a few lines of context around the cursor
set scrolloff=5

" do incremental searching.
set incsearch

" retain more of the history
set history=1000

" fast escape
inoremap jk <Esc>
cnoremap jk <C-c>

" enter command mode with one keystroke
nnoremap ; :
vnoremap ; :

" jump to matching pairs easily, with Tab
map    <Tab> %
map  <S-Tab> g%
vmap   <Tab> %
vmap <S-Tab> g%

" format current paragraph
vnoremap ,f gq
nnoremap ,f gqap

" write file
nnoremap <Leader>w :w<CR>

" move horizontally between splits
map <C-l> <Action>(NextSplitter)
map <C-h> <Action>(PrevSplitter)

" move tab to the other split
map <C-i> <Action>(MoveEditorToOppositeTabGroup)

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
"map \r <Action>(ReformatCode)

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

"" Map \b to toggle the breakpoint on the current line
"map <Leader>b <Action>(ToggleLineBreakpoint)

" Find more examples here: https://jb.gg/share-ideavimrc
