! Remove existing Meta_L keysyms from Alt_L
keycode 64 = Alt_L NoSymbol Alt_L

! Reconfigure Alt_R to Hyper_R
keycode 108 = Hyper_R NoSymbol Hyper_R

clear Shift
clear Control
clear Mod1
clear Mod2
clear Mod3
clear Mod4
clear Mod5

add Shift = Shift_L Shift_R
add Control = Control_L Control_R
add Mod1 = Alt_L
add Mod2 = Num_Lock
add Mod3 = Hyper_R
add Mod4 = Super_L
add Mod5 = ISO_Level3_Shift

